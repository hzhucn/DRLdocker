FROM tensorflow/tensorflow:nightly-gpu

# Image maintainer:
MAINTAINER roberto.calandra@berkeley.edu

LABEL \
	MuJoCo=140\
	Gazebo=\

# Workaround to have Git working under Docker when using HTCondor:
# See https://www-auth.cs.wisc.edu/lists/htcondor-users/2016-January/msg00074.shtml
RUN mkdir -p /home/condor
RUN echo 'condor::65534:0::/home/condor:/bin/bash' >> /etc/passwd

# Initial operations
RUN \
	sudo sh -c 'echo "deb http://packages.osrfoundation.org/gazebo/ubuntu-stable `lsb_release -cs` main" > /etc/apt/sources.list.d/gazebo-stable.list' \
	wget http://packages.osrfoundation.org/gazebo.key -O - | sudo apt-key add - \

# Install packages
RUN apt-get update && apt-get install -y \
		openscenegraph \
		unzip \
		gazebo7 \
		wget \
		xvfb \
		libopenscenegraph-dev \
	&& apt-get clean \
	&& rm -rf /var/lib/apt/lists/

EXPOSE 6006

